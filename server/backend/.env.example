# Smart Greenhouse IoT System - Environment Configuration
# Copy this file to .env and update the values for your environment

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=greenhouse
POSTGRES_USER=greenhouse_user
POSTGRES_PASSWORD=greenhouse_pass

# TimescaleDB Configuration
TIMESCALEDB_ENABLED=true
TIMESCALE_CHUNK_TIME_INTERVAL=1d
TIMESCALE_COMPRESSION_ENABLED=true
TIMESCALE_RETENTION_POLICY=1y

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# Security Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

API_KEY_CACHE_TTL=300
SESSION_TTL=86400

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=120
SENSOR_DATA_RATE_LIMIT=60
ACTUATOR_CONTROL_RATE_LIMIT=30

# CoAP Configuration
COAP_HOST=0.0.0.0
COAP_PORT=5683
COAP_LOG_PROTOCOL_ERRORS=true

# Monitoring Configuration
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@greenhouse.local
ADMIN_PASSWORD=admin123
CREATE_ADMIN_ON_STARTUP=true
